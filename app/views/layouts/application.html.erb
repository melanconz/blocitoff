
<!DOCTYPE html>
<html>
<head>
  <title>Blocitoff</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <div class="pull-left">
      <ul class="nav nav-tabs">
        <% if user_signed_in? %>
          <%= link_to "Home", root_path %> - <%= link_to "Profile", user_path(current_user.id) %>
    </div>
    <div class="pull-right">
      <ul class="nav nav-tabs">
          <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>

    </div>
    <div class="pull-left">
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
          <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
       <% end %>
    </div>

  </div>



<%= yield %>

</body>
</html>
